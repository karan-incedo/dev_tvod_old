<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.viewlift">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="com.android.vending.BILLING" />

    <application
        android:name="com.viewlift.AppCMSApplication"
        android:allowBackup="true"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:node="merge">

        <meta-data
            android:name="com.urbanairship.autopilot"
            android:value="com.urbanairship.AutoPilot" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="010453f0fe88d0a913753d705ba2c0cf368eb0c9" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="com.viewlift.views.activity.AppCMSPageActivity"
            android:configChanges="orientation|screenSize"
            android:launchMode="singleTask">
            <meta-data
                android:name="android.app.default_searchable"
                android:value="com.viewlift.views.activity.AppCMSSearchActivity" />
        </activity>

        <activity
            android:name="com.viewlift.views.activity.AppCMSErrorActivity"
            android:configChanges="orientation|screenSize" />

        <activity
            android:name="com.viewlift.views.activity.AppCMSPlayVideoActivity"
            android:configChanges="orientation|screenSize"
            android:launchMode="singleTask" />

        <activity
            android:name="com.viewlift.views.activity.AppCMSSearchActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <activity
            android:name="com.viewlift.casting.ExpandedControlsActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:theme="@style/Theme.CastControllerTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.viewlift.mobile.AppCMSLaunchActivity" />
        </activity>

        <activity
            android:name="com.viewlift.views.activity.AppCMSWatchlistActivity"
            android:configChanges="orientation|screenSize"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH.Watchlist" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.viewlift.casting.roku.RokuCastingOverlay"
            android:configChanges="orientation|screenSize"
            android:launchMode="singleTask">

        </activity>

        <provider
            android:name="com.viewlift.models.data.appcms.providers.AppCMSSearchableContentProvider"
            android:authorities="@string/app_cms_search_provider" />

        <activity android:name="com.viewlift.views.activity.AppCMSHistoryActivity" />

        <service android:name="com.viewlift.models.network.background.services.AppCMSBackgroundService" />

        <activity android:name="com.viewlift.views.activity.AutoplayActivity" />

        <meta-data
            android:name="com.google.android.gms.cast.framework.OPTIONS_PROVIDER_CLASS_NAME"
            android:value="com.viewlift.casting.CastOptionsProvider" />

        <receiver
            android:name="com.appsflyer.SingleInstallBroadcastReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
