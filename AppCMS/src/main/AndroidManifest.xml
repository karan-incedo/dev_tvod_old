<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="snagfilms.com.air.appcms">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.viewlift.AppCMSApplication"
        android:allowBackup="true"
        android:supportsRtl="true"
        tools:node="merge">
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="010453f0fe88d0a913753d705ba2c0cf368eb0c9" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <activity
            android:name="com.viewlift.views.activity.AppCMSPageActivity"
            android:configChanges="orientation|screenSize"
            android:launchMode="singleTask">
            <meta-data
                android:name="android.app.default_searchable"
                android:value="com.viewlift.views.activity.AppCMSSearchActivity" />
        </activity>
        <activity android:name="com.viewlift.views.activity.AppCMSErrorActivity"
            android:configChanges="orientation|screenSize"/>
        <activity
            android:name="com.viewlift.views.activity.AppCMSPlayVideoActivity"
            android:configChanges="orientation|screenSize"
            android:launchMode="singleTask" />
        <activity
            android:name="com.viewlift.views.activity.AppCMSSearchActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <provider
            android:authorities="@string/app_cms_search_provider"
            android:name="com.viewlift.models.data.appcms.providers.AppCMSSearchableContentProvider" />
    </application>

</manifest>