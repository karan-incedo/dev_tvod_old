<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/menu_item_height"
    android:id="@+id/parent_layout"
    xmlns:gravity="http://schemas.android.com/apk/res-auto"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    android:padding="0dp">

    <View
        android:id="@+id/nav_item_selector"
        android:layout_width="1dp"
        android:layout_height="wrap_content" />
    <!--nav_item_logo place for team list page image icon -->
    <ImageView
        android:id="@+id/nav_item_logo"
        android:layout_gravity="start|center_vertical"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:visibility="gone"
        android:scaleType="fitCenter"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/nav_item_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:layout_margin="@dimen/nav_item_margin"
        android:layout_weight="9"
        android:textColor="@color/colorNavBarText"
        android:textSize="@dimen/nav_item_text_size" />

</LinearLayout>