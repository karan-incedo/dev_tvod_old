<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground">
    <ImageView
        android:id="@+id/nav_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/nav_item_margin"
        android:layout_alignParentLeft="true"/>
    <TextView
        android:id="@+id/nav_item_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/nav_item_text_size"
        android:textColor="@color/colorNavBarText"
        android:layout_margin="@dimen/nav_item_margin"
        android:layout_toEndOf="@id/nav_item_icon"/>

</RelativeLayout>