<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.viewlift.ccavenue.screens.PaymentOptionsActivity"
    android:background="@android:color/black"
    >
    <TextView
        android:id="@+id/id_tv_biling_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Billing Information"
        android:textColor="@android:color/white"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/id_tv_text_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:text=""
        android:layout_below="@+id/id_tv_biling_information"
        android:layout_marginTop="10dp"
        />

    <LinearLayout
        android:id="@+id/id_ll_card_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/id_tv_text_payment"
        android:gravity="center"
        android:layout_marginTop="10dp"
        >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:text="We Accept"
        />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/amex"
            android:layout_marginLeft="5sp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/discover"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mastercard"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/visa"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/id_iv_secure_image"
        android:layout_below="@+id/id_ll_card_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/verified"
        android:layout_marginTop="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/id_iv_secure_image"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:text="Billing Information"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >
            <EditText
                android:id="@+id/id_et_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Name"
                android:inputType="text"
                android:singleLine="true"
                android:background="@android:color/white"
                android:padding="10dp"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >
            <EditText
                android:id="@+id/id_et_street_address"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Street Address"
                android:inputType="text"
                android:singleLine="true"
                android:background="@android:color/white"
                android:padding="10dp"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >
            <EditText
                android:id="@+id/id_et_zip_code"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Zip/Post Code"
                android:inputType="text"
                android:singleLine="true"
                android:background="@android:color/white"
                android:padding="10dp"
                />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:text="Card Details"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >
            <EditText
                android:id="@+id/id_et_card_number"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="CARD NUMBER"
                android:inputType="text"
                android:singleLine="true"
                android:background="@android:color/white"
                android:padding="10dp"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >
            <EditText
                android:id="@+id/id_et_expiration_date"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="EXPIRATION DATE MM/YY"
                android:inputType="text"
                android:singleLine="true"
                android:background="@android:color/white"
                android:padding="10dp"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >
            <EditText
                android:id="@+id/id_et_cvc"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="CVC"
                android:inputType="text"
                android:singleLine="true"
                android:background="@android:color/white"
                android:padding="10dp"
                />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>



</RelativeLayout>

</ScrollView>
