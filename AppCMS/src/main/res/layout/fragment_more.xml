<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_cms_more_layout_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/app_cms_close_button"
        android:layout_width="@dimen/close_button_size"
        android:layout_height="@dimen/close_button_size"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/close_button_margin"
        android:alpha="1.0"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/app_cms_more_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:alpha="1.0"
        android:contentDescription="df"
        android:gravity="center"
        android:padding="@dimen/app_cms_account_padding"
        android:textStyle="bold"
        android:visibility="visible"
        android:textSize="@dimen/app_cms_more_title_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/app_cms_close_button"
        app:layout_constraintTop_toTopOf="parent"
         />

    <TextView
        android:id="@+id/app_cms_more_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="1.0"
        android:padding="@dimen/app_cms_account_padding"
        android:text="Title"
        app:layout_constraintBottom_toBottomOf="@id/app_cms_more_layout_parent"
        app:layout_constraintTop_toTopOf="@id/app_cms_more_layout_parent"
        app:layout_constraintVertical_bias="0.103"
        tools:layout_editor_absoluteX="0dp" />

</android.support.constraint.ConstraintLayout>