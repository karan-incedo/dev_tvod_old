<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true" android:state_focused="true">
        <bitmap android:src="@drawable/lb_ic_cc" android:tint="@color/colorAccent" />
    </item>

    <item android:state_selected="false" android:state_focused="true">
        <bitmap android:src="@drawable/lb_ic_cc_disabled" android:tint="@color/colorAccent" />
    </item>

    <item android:state_selected="true" android:state_focused="false">
        <bitmap android:src="@drawable/lb_ic_cc" />
    </item>

    <item android:state_selected="false" android:state_focused="false">
        <bitmap android:src="@drawable/lb_ic_cc_disabled" />
    </item>

</selector>