<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomShowcaseTheme" parent="ShowcaseView">
        <item name="sv_showcaseColor">@color/colorAccent</item>
        <item name="sv_buttonText">OK</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="Theme.CastControllerTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="castExpandedControllerStyle">
            @style/CustomCastExpandedController
        </item>
    </style>

    <style name="CustomCastExpandedController" parent="CastExpandedController">
        <item name="castControlButtons">
            @array/cast_controller_button
        </item>
    </style>

</resources>
