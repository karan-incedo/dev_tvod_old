<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomShowcaseTheme">
        <item name="sv_showcaseColor">@color/colorAccent</item>
        <item name="sv_buttonText">OK</item>
        <item name="android:textColor">#000000</item>
        <item name="sv_detailTextAppearance">@style/CustomTitle</item>
    </style>

    <style name="CustomTitle" parent="android:style/TextAppearance">
        <item name="android:textColor">#00801A</item>
    </style>

    <style name="Theme.CastControllerTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="castExpandedControllerStyle">
            @style/CustomCastExpandedController
        </item>
    </style>

    <style name="CustomCastExpandedController" parent="CastExpandedController">
        <item name="castControlButtons">
            @array/cast_controller_button
        </item>
    </style>

    <style name="TransparentTheme" parent="AppTheme">

         <item name="android:background">@color/semiTransparentColor</item>
          <item name="background">@null</item>

        <item name="android:windowBackground">@android:color/transparent</item>

        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>
