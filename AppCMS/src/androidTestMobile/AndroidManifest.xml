<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.viewlift">

    <uses-permission android:name="appCMSAndroidUI.permission.INTERNET"/>
    <uses-permission android:name="appCMSAndroidUI.permission.READ_CONTACTS"/>
    <uses-permission android:name="appCMSAndroidUI.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="appCMSAndroidUI.permission.ACCESS_COARSE_LOCATION"/>

    <!-- Allows unlocking your device and activating its screen so UI tests can succeed -->
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <!-- Allows for storing and retrieving screenshots -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- Allows changing locales -->
    <uses-permission android:name="android.permission.CHANGE_CONFIGURATION" />


    <application
        android:name="com.viewlift.AppCMSApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/default_app_name"
        android:supportsRtl="true">
        <activity android:name="com.viewlift.activities.AppCMSLaunchTestActivity">
            <intent-filter>
                <action android:name="appCMSAndroidUI.intent.action.MAIN" />
                <category android:name="appCMSAndroidUI.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.viewlift.views.activity.AppCMSPageActivity"/>
        <activity android:name="com.viewlift.views.activity.AppCMSErrorActivity"/>
    </application>

</manifest>