<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/navigation_layouts_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/navigation_placholder"
            android:layout_width="match_parent"
            android:layout_height="@dimen/appcms_tv_navigation_height"
            android:animateLayoutChanges="true"
            android:background="@color/appcms_nav_background"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/sub_navigation_placeholder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:background="@color/appcms_nav_background"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/navigation_layouts_container"
        android:animateLayoutChanges="true">

        <TextView
            android:id="@+id/subscribe_now_strip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/colorAccent"
            android:focusable="false"
            android:textAlignment="center" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/subscribe_now_strip">


            <FrameLayout
