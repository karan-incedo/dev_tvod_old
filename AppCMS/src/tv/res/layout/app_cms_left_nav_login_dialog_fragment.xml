<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/nav_top_line"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_alignParentTop="true"
        android:focusable="false"
        android:textAlignment="center" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/nav_top_line"
        >

        <FrameLayout
            android:id="@+id/profile_placeholder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        </FrameLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sub_navigation_containeer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/left_nav_gradient"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/sub_navigation_placholder"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/appcms_tv_sub_navigation_top_margin"
            android:orientation="vertical"
            android:gravity="center"
            >


            <LinearLayout
                android:id="@+id/nav_item_login_layout"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:layout_marginLeft="50dp"
                android:paddingLeft="10dp"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/nav_item_login_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/st_menu_icon_home"
                    />

                <TextView
                    android:id="@+id/textView_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="LOG IN"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="@dimen/appcms_tv_navigation_textSize"
                    android:letterSpacing="0.04"
                    android:focusable="true"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/nav_item_logout_layout"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:layout_marginLeft="50dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                >

                <ImageView
                    android:id="@+id/nav_item_logout_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/st_menu_icon_home"
                    />

                <TextView
                    android:id="@+id/textview_signup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SIGN UP"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="@dimen/appcms_tv_navigation_textSize"
                    android:letterSpacing="0.04"
                    android:focusable="true"
                    />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
